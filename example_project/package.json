{
  "name": "taskmaster-pro",
  "version": "1.0.0",
  "description": "Task management application demonstrating SuperManUS enforcement",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:auth": "jest --testPathPattern=auth",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit && snyk test",
    "security-scan": "semgrep --config=auto",
    "build": "npm run lint && npm run type-check && npm test",
    "supermanus:start": "python supermanus_start.py",
    "supermanus:validate": "python -c 'from supermanus.task_enforcer import get_enforcer; print(get_enforcer().get_status())'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.34.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "snyk": "^1.1244.0"
  },
  "keywords": [
    "task-management",
    "web-application", 
    "supermanus",
    "task-enforcement",
    "systematic-development"
  ],
  "author": "SuperManUS Example Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "supermanus": {
    "version": "1.0",
    "enforcement_active": true,
    "task_validation_required": true,
    "integrations": {
      "claude_code": true,
      "cursor": true,
      "github_copilot": true
    }
  }
}